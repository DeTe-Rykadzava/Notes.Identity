@model LoginViewModel

<head>
    <link href=@Url.Content("~/styles/app.css") rel="stylesheet" type="text/css"/>
</head>

<form asp-controller="Auth" asp-action="Login" method="post" >
    <input type="hidden" asp-for="ReturnUrl"/>
    <div class="header">Login</div>
    <div class="block">
        <label class="label">Username</label>
        <input class="input" asp-for="Username"/>
        <span asp-validation-for="Username"></span>
    </div>
    <div class="block">
        <label class="label">Password</label>
        <input class="input" asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="block">
        <button class="button" type="submit" style="margin-top: 10px;">Sign In</button>
    </div>
    <a asp-controller="Auth" asp-action="Registration" asp-route-returnUrl="@Model.ReturnUrl"
           class="switch-button">Registration</a>
</form>